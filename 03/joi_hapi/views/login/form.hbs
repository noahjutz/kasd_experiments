<form method="post" action="login" class="block">
  <div class="field has-addons">
    <div class="control">
      <input class="input" name="email" type="text" placeholder="Email" />
    </div>
    <div class="control">
      <input
        class="input"
        name="password"
        type="password"
        placeholder="Password"
      />
    </div>
